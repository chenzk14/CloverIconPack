<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tips_card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_marginEnd="@dimen/margin_small"
    android:layout_marginStart="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_small"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:contentPaddingBottom="@dimen/margin_small"
    app:contentPaddingLeft="@dimen/margin_normal"
    app:contentPaddingRight="@dimen/margin_normal"
    app:contentPaddingTop="@dimen/margin_normal"
    app:strokeColor="?colorControlLight"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TextAppearance.IOSched.H3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="这些是什么？" />

        <TextView
            style="@style/Widget.IOSched.MultilineBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="如果您想要应用此图标包，需要一个支持图标包的桌面启动器，下方是一些流行的启动器，您可以长按桌面空白处打开设置，检查是否包含应用图标包的功能。" />

        <Button
            android:id="@+id/dismiss_card"
            style="?borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_small"
            android:text="知道了" />

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>